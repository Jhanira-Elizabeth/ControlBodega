@model ControlBodega.Models.Devolucion
@{
    ViewData["Title"] = "Editar Devolución";
}
<h1 class="mb-4">Editar Devolución</h1>
<form asp-action="Edit">
    <input type="hidden" asp-for="IdDevolucion" />
    <div class="form-group">
        <label asp-for="IdEgreso" class="control-label"></label>
        <input asp-for="IdEgreso" class="form-control" />
        <span asp-validation-for="IdEgreso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Producto" class="control-label"></label>
        <input asp-for="Producto" class="form-control" />
        <span asp-validation-for="Producto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdPlanta" class="control-label"></label>
        <select asp-for="IdPlanta" class="form-control" asp-items="ViewBag.IdPlanta"></select>
        <span asp-validation-for="IdPlanta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cantidad" class="control-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaDevolucion" class="control-label"></label>
        <input asp-for="FechaDevolucion" class="form-control" type="date" />
        <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Motivo" class="control-label"></label>
        <input asp-for="Motivo" class="form-control" />
        <span asp-validation-for="Motivo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
