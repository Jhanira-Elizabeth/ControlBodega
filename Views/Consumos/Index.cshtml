@model IEnumerable<ControlBodega.Models.Consumo>
<link rel="stylesheet" href="~/css/planta-dashboard.css" />
@{
    ViewData["Title"] = "Consumos";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Consumos</h2>
        <a asp-action="Create" class="btn btn-success">Nuevo Consumo</a>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card dashboard-card shadow">
                    <div class="card-header bg-primary text-white fw-bold">
                        @item.Producto
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Fecha.ToString("dd/MM/yyyy")</h5>
                        <p class="card-text"><strong>Medida:</strong> @item.Medida</p>
                        <p class="card-text"><strong>Tanque:</strong> @item.Tanque</p>
                        <p class="card-text"><strong>Poblaci√≥n:</strong> @item.Poblacion</p>
                        <p class="card-text"><strong>Estadio:</strong> @item.Estadio</p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.IdConsumo" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.IdConsumo" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.IdConsumo" class="btn btn-danger btn-sm">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
