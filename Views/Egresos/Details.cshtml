@model ControlBodega.Models.Egreso
<link rel="stylesheet" href="~/css/planta-dashboard.css" />
@{
    ViewData["Title"] = "Detalles de Egreso";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow dashboard-card">
                <div class="card-header bg-info text-white fw-bold">Detalles de Egreso</div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Producto</dt>
                        <dd class="col-sm-8">@Model.Producto</dd>
                        <dt class="col-sm-4">Medida</dt>
                        <dd class="col-sm-8">@Model.Medida</dd>
                        <dt class="col-sm-4">Cantidad</dt>
                        <dd class="col-sm-8">@Model.Cantidad</dd>
                        <dt class="col-sm-4">Fecha</dt>
                        <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy")</dd>
                        <dt class="col-sm-4">Responsable</dt>
                        <dd class="col-sm-8">@Model.Responsable</dd>
                        <dt class="col-sm-4">Tipo</dt>
                        <dd class="col-sm-8">@Model.Tipo</dd>
                        <dt class="col-sm-4">Planta</dt>
                        <dd class="col-sm-8">@Model.Planta?.NPlanta</dd>
                    </dl>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                        <a asp-action="Edit" asp-route-id="@Model.IdEgreso" class="btn btn-primary">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
