@model ControlBodega.Models.Inventario
<link rel="stylesheet" href="~/css/planta-dashboard.css" />
@{
    ViewData["Title"] = "Eliminar Producto";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow dashboard-card">
                <div class="card-header bg-danger text-white fw-bold">Eliminar Producto</div>
                <div class="card-body">
                    <h5>¿Estás seguro que deseas eliminar este producto?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Producto</dd>
                        <dt class="col-sm-4">Medida</dt>
                        <dd class="col-sm-8">@Model.Medida</dd>
                        <dt class="col-sm-4">Precio</dt>
                        <dd class="col-sm-8">@Model.Precio.ToString("C")</dd>
                        <dt class="col-sm-4">Planta</dt>
                        <dd class="col-sm-8">@Model.Planta?.NPlanta</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
