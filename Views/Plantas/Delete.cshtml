
@model ControlBodega.Models.Planta
@{
    ViewData["Title"] = "Eliminar Planta";
}
<link rel="stylesheet" href="~/css/planta-dashboard.css" />
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow dashboard-card">
                <div class="card-header bg-danger text-white fw-bold">Eliminar Planta</div>
                <div class="card-body">
                    <h5>¿Estás seguro que deseas eliminar esta planta?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.NPlanta</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdPlanta" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
