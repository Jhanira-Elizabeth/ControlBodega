
@model ControlBodega.Models.Planta
@{
    ViewData["Title"] = "Editar Planta";
}
<link rel="stylesheet" href="~/css/planta-dashboard.css" />
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow dashboard-card">
                <div class="card-header bg-warning text-dark fw-bold">Editar Planta</div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="IdPlanta" />
                        <div class="mb-3">
                            <label asp-for="NPlanta" class="form-label"></label>
                            <input asp-for="NPlanta" class="form-control" />
                            <span asp-validation-for="NPlanta" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                            <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
