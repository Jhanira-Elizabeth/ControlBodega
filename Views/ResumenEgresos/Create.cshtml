@model ControlBodega.Models.ResumenEgreso
<link rel="stylesheet" href="~/css/planta-dashboard.css" />
@{
    ViewData["Title"] = "Crear Resumen de Egreso";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow dashboard-card">
                <div class="card-header bg-primary text-white fw-bold">Crear Resumen de Egreso</div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="Fecha" class="form-label"></label>
                            <input asp-for="Fecha" class="form-control" type="date" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TotalEgresos" class="form-label"></label>
                            <input asp-for="TotalEgresos" class="form-control" />
                            <span asp-validation-for="TotalEgresos" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="IdPlanta" class="form-label">Planta</label>
                            <select asp-for="IdPlanta" class="form-select" asp-items="ViewBag.IdPlanta"></select>
                            <span asp-validation-for="IdPlanta" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
